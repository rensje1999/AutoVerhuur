@model IEnumerable<AutoVerhuurJansen.Models.Voertuigen>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<center>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.merk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categorie.categorieNaam)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.merk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categorie.categorieNaam)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.kenteken }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.kenteken }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.kenteken }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</center>